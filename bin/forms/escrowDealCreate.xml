<body formSize="416" fontSize="16">
	<div height="34"></div>
	<div height="68" layout="horizontal" align="center">
		<space size="10"/>
		<graph id="btnBack" width="20" height="30" src="res/backarrow.svg" />
		<space size="15"/>
		<div width="100%" font-size="22">Create your ad</div>
		<space size="10"/>
		<graph width="25" height="25" src="res/icon_info.svg"/>
		<space size="10"/>
	</div>
	<div width="100%" height="100%" background-color="#E9F3F8" overflow="scroll">
		<space size="30"/>
		<div layout="horizontal" width="85%">
			<space size="10"/>
			<div width="45" height="45" background-color="" border-radius="18" id="avatest">avatar</div>
			<space size="5"/>
			<div></div>
			<div width="100%" background-color="#FFFFFF" color="#AEAEAE" border-radius="15" padding="15">
				${mainText}
				<space size="10" />
				<div color="#FE0010">${termsAndConditions}</div>
			</div>
		</div>
		<space size="30"/>
		<div layout="horizontal" width="85%">
			<space size="10"/>
			<div width="40" height="40" opacity="0">avatar</div>
			<div width="100%" background-color="#FFFFFF" border-radius="15" padding="15">
				<div id="btnSide">
					<div font-size="14">I would like to</div>
					<div layout="horizontal">
						<div id="lblSide" width="100%" font-size="18" color="#B0B0B0">Choose operation type</div>
						<graph width="10" height="10" src="res/downarrow.svg" />
					</div>
				</div>
				<space size="10"/>
				<div id="btnInstrument">
					<div font-size="14">Crypto</div>
					<div>
						<div layout="horizontal">
                            <img src="res/154264.jpg" width="100" height="100" background-color="#00FFCC" />
                            <graph id="icoCurrency" background-color="#FFCCAA" width="120" height='120'></graph>
							<div id="lblInstrument" width="100%" font-size="18" color="#B0B0B0">Select crypto</div>
							<graph width="10" height="10" src="res/downarrow.svg" />
						</div>
					</div>
				</div>
				<space size="10"/>
				<div id="btnAmount">
					<div font-size="14">Amount of crypto</div>
					<div id="lblAmount" font-size="18" color="#B0B0B0">Amount</div>
				</div>
				<space size="10"/>
				<div id="btnPrice">
					<div font-size="14">Price per coin</div>
					<div font-size="18" color="#B0B0B0" layout="horizontal" border="0 0 2 0" border-color="#FF0000">
						<div id="lblPrice" width="100%">Input price</div>
						<space size="10"/>
						<div id="lblCurrency" width="40"></div>
					</div>
				</div>
				<space size="20"/>
				<div onclick="execute:GD.S_BTN_CLICK.invoke('123')" align="center" text-align="center" padding="15" border-radius="8" background-color="#5DC269" color="#FFFFFF" font-size="18">
					CREATE
				</div>
			</div>
		</div>
		<space size="30"/>
    </div>
</body>